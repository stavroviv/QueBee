<idea-plugin>
    <id>plug.quebee</id>
    <name>QueBee</name>
    <vendor email="QueBee@gmail.com" url="http://www.homelab.com">QueBee</vendor>

    <description><![CDATA[
    Query builder<br>
    <em>for Postgres, MySQL</em>
    ]]></description>

    <depends>com.intellij.modules.database</depends>
    <depends>com.intellij.modules.ultimate</depends>

    <extensions defaultExtensionNs="com.intellij">
    </extensions>

    <actions>
        <action id="com.querybuilder.home.lab.SQLQueryBuilder" class="com.querybuilder.home.lab.MainAction"
                text="SQL query builder" description="Open best in the world SQL query builder">
            <add-to-group group-id="EditorPopupMenu" anchor="last"/>
        </action>
    </actions>
</idea-plugin>