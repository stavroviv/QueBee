<idea-plugin>
    <id>plug.quebee</id>
    <name>QueBee</name>
    <vendor email="QueBee@gmail.com" url="http://www.homelab.com">QueBee</vendor>

    <description><![CDATA[ Query builder for making selects queries<br> <em>in Postgres, MySQL</em>]]></description>

    <depends>com.intellij.modules.database</depends>
    <depends>com.intellij.modules.ultimate</depends>

    <extensions defaultExtensionNs="com.intellij">
    </extensions>

    <actions>
        <action id="com.querybuilder.home.lab.SQLQueryBuilder" class="com.querybuilder.MainAction"
                text="SQL query builder" description="Open best in the world SQL query builder">
            <add-to-group group-id="EditorPopupMenu" anchor="last"/>
        </action>
        <action id="com.querybuilder.MainAction" class="com.querybuilder.MainAction" text="QB"
                description="Query builder" icon="/images/qbicon.png">
            <add-to-group group-id="Console.Jdbc.Left" anchor="after" relative-to-action="Database.Settings"/>
        </action>
    </actions>
</idea-plugin>